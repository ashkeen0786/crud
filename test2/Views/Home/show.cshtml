@model List<test2.context.testtable>
@{
    ViewBag.Title = "show";
}

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Father name</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.name</td>
            <td>@item.email</td>
            <td>@item.address</td>
            <td>@item.father_name</td>
            <td>
                <a href="@Url.Action("edit",new {item.id})" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("delete",new {item.id })" class="btn btn-danger">Delete</a>
            </td>

        </tr>
    }
</table>


<a href="@Url.Action("Index")" class="btn btn-danger">Add</a>

